{
  "expo": {
    "name": "Sanctum",
    "slug": "sanctum",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "sanctum",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4A2040"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sanctum.app",
      "infoPlist": {
        "NSCameraUsageDescription": "We need camera access to take profile photos and scan QR codes.",
        "NSPhotoLibraryUsageDescription": "We need photo library access to select profile photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4A2040"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.sanctum.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Sanctum to access your camera for profile photos and QR scanning."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Sanctum to access your photos for profile pictures."
        }
      ],
      "expo-web-browser"
    ]
  }
}
